# Various aliases

# Add colors to common commands
alias ls='ls --color=auto'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

alias more=less

alias pip='pip3'
alias pydoc='pydoc3'
alias py=python3
alias open=xdg-open

# for when the side of my space bar doesn't work
alias cd..='cd ..'

alias ll='ls -ahlF'
alias la='ls -A'
alias l='ls -CF'


# use rlwrap to make the interactive prompt better
alias sml='rlwrap sml'

alias xcopy='xclip -selection clipboard'
alias extract='tar xf'


# Alert alias for long running commands.  Use like so: `sleep 10; alert`
alias alert='notify-send --urgency=low -i "$([ $? = 0 ] && echo terminal || echo error)" "$(history|tail -n1|sed -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'')"'


alias dotfiles='git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME'
